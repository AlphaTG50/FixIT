{
  "name": "fixit",
  "version": "1.0.8",
  "main": "main.js",
  "bin": "main.js",
  "author": "HelpIT",
  "license": "ISC",
  "keywords": [
    "IT-Tool",
    "Produktivit√§t",
    "Automatisierung",
    "All-in-One"
  ],
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.helpit.fixit",
    "productName": "FixIT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/assets/portable-apps",
        "to": "portable-apps",
        "filter": [
          "**/*.exe",
          "**/*.ps1",
          "**/*.bat"
        ]
      },
      {
        "from": "src/assets/portable-scripts",
        "to": "portable-scripts",
        "filter": [
          "**/*.bat",
          "**/*.ps1"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/images/logo/win/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "asarUnpack": [
        "app.manifest"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FixIT",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "FixIT.Setup.v${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^32.2.5",
    "electron-builder": "^25.1.8",
    "rcedit": "^4.0.1"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "archiver": "^5.3.1",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.7",
    "electron-icon-maker": "^0.0.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.2.0",
    "node-fetch": "^3.3.2",
    "systeminformation": "^5.21.7"
  },
  "type": "commonjs"
}
